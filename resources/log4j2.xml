<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration status="WARN" name="Simple_RestFul_WebApplication">
  <appenders>
	<File name="log" fileName="z://log.txt" append="true">  
	<PatternLayout pattern="%d{dd-MMM-yyyy HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>
	</File>
  	  	
  </appenders>

  <loggers>
    <root level="info">
      <appender-ref ref="log"/>
    </root>
  </loggers>
</configuration>